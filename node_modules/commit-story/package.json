{
  "name": "commit-story",
  "version": "1.1.1",
  "description": "Automated Git Journal System with AI Assistant Context Integration",
  "main": "src/index.js",
  "bin": {
    "commit-story": "src/index.js",
    "commit-story-init": "scripts/install-commit-journal-hook.sh",
    "commit-story-remove": "scripts/uninstall-commit-journal-hook.sh"
  },
  "type": "module",
  "scripts": {
    "commit-story:run": "node src/index.js",
    "commit-story:test": "node tests/connectivity.js",
    "commit-story:init-hook": "bash scripts/install-commit-journal-hook.sh",
    "commit-story:remove-hook": "bash scripts/uninstall-commit-journal-hook.sh",
    "secrets:pull": "teller env",
    "test:trace": "node scripts/test-otel.js",
    "validate:telemetry": "node scripts/validate-telemetry.js",
    "mcp:test": "npx @modelcontextprotocol/inspector node src/mcp/server.js",
    "mcp:start": "node src/mcp/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wiggitywhitney/commit-story.git"
  },
  "keywords": [
    "git",
    "journal",
    "ai",
    "automation",
    "development"
  ],
  "author": "Whitney Lee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wiggitywhitney/commit-story/issues"
  },
  "homepage": "https://github.com/wiggitywhitney/commit-story#readme",
  "files": [
    "src/",
    "scripts/install-commit-journal-hook.sh",
    "scripts/uninstall-commit-journal-hook.sh",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.63.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.205.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.205.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.204.0",
    "@opentelemetry/sdk-logs": "^0.205.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.204.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "dotenv": "^17.2.2",
    "openai": "^5.19.1"
  }
}
